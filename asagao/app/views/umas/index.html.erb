<% @page_title = "馬一覧" %>
<h1><%= @page_title %><h1>
	<p><%= link_to "新規登録", :new_uma, class: "btn btn-default btn-warning" %></p>

	<%if @umas.present? %>
		<table class="table table-striped table-borderd">
			<tr>
				<th>ID</th>
				<th>馬名</th>
				<th>操作</th>
			</tr>
			<% @umas.each do |uma| %>
			<tr>
				<td><%= uma.id %></td>
				<td><%= uma.horse_name %></td>
				<td>
					<%= link_to "削除", uma, method: :delete,
						class: "btn btn-default btn-warning",
						confirm: "本当に削除しますか？" %>
				</td>
				</td>
			</tr>
			<% end %>
		</table>
	<% else %>
	<p> 未登録 </P>
	<% end %>
