<% @page_title = "レース結果一覧" %>
<h1><%= @page_title %><h1>
	<p><%= link_to "新規登録", :new_raceresult, class: "btn btn-default btn-warning" %></p>

	<%if @raceresults.present? %>
		<table class="table table-striped table-borderd">
			<tr>
				<th>ID</th>
				<th>レース名</th>
				<th>馬名</th>
				<th>着順</th>
				<th>操作</th>
			</tr>
			<% @raceresults.each do |raceresult| %>
			<tr>
				<td><%= raceresult.id %></td>
				<td><%= raceresult.race.race_name %></td>
				<td><%= raceresult.uma.horse_name %></td>
				<td><%= raceresult.race_result %></td>
				<td>
					<%= link_to "編集", [:edit, raceresult] ,
					    class: "btn btn-default btn-warning" %>
					<%= link_to "削除", raceresult, method: :delete,
						class: "btn btn-default btn-warning",
						confirm: "本当に削除しますか？" %>
				</td>
				</td>
			</tr>
			<% end %>
		</table>
	<% else %>
	<p> 未登録 </P>
	<% end %>
