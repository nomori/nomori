<% @page_title = "レース一覧" %>
<h1><%= @page_title %><h1>
	<p><%= link_to "新規登録", :new_race, class: "btn btn-default btn-warning" %></p>

	<%if @races.present? %>
		<table class="table table-striped table-borderd">
			<tr>
				<th>ID</th>
				<th>レース名</th>
				<th>操作</th>
			</tr>
			<% @races.each do |race| %>
			<tr>
				<td><%= race.id %></td>
				<td><%= race.race_name %></td>
				<td>
					<%= link_to "削除", race, method: :delete,
						class: "btn btn-default btn-warning",
						confirm: "本当に削除しますか？" %>
				</td>
				</td>
			</tr>
			<% end %>
		</table>
	<% else %>
	<p> 未登録 </P>
	<% end %>
